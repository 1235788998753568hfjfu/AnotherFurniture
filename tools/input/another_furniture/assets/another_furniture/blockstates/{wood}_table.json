{
    "multipart": [
        {
            "when": {
                "facing": "north"
            },
            "apply": {
                "model": "another_furniture:block/table/{wood}_top"
            }
        },
        {
            "when": {
                "facing": "east"
            },
            "apply": {
                "model": "another_furniture:block/table/{wood}_top",
                "y": 90
            }
        },
        {
            "when": {
                "facing": "south"
            },
            "apply": {
                "model": "another_furniture:block/table/{wood}_top",
                "y": 180
            }
        },
        {
            "when": {
                "facing": "west"
            },
            "apply": {
                "model": "another_furniture:block/table/{wood}_top",
                "y": 270
            }
        },
        {
            "when": {
                "leg_1": "true"
            },
            "apply": {
                "model": "another_furniture:block/table/{wood}_leg",
                "uvlock": true
            }
        },
        {
            "when": {
                "leg_2": "true"
            },
            "apply": {
                "model": "another_furniture:block/table/{wood}_leg",
                "y": 90,
                "uvlock": true
            }
        },
        {
            "when": {
                "leg_3": "true"
            },
            "apply": {
                "model": "another_furniture:block/table/{wood}_leg",
                "y": 180,
                "uvlock": true
            }
        },
        {
            "when": {
                "leg_4": "true"
            },
            "apply": {
                "model": "another_furniture:block/table/{wood}_leg",
                "y": 270,
                "uvlock": true
            }
        }
    ]
}
